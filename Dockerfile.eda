FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    jupyter \
    pandas \
    numpy \
    matplotlib \
    scikit-learn \
    catboost \
    joblib

EXPOSE 8888

CMD ["jupyter", "notebook", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root", "--NotebookApp.token=''"]
